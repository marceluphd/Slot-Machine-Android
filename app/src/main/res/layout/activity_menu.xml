<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gustavo.nac.MenuActivity"
    android:orientation="vertical"
    android:background="@drawable/background_menu">



<ImageView

    android:id="@+id/logo"
    android:layout_width="wrap_content"
    android:layout_height="140dp"
    android:background="@drawable/logo_orange"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="100dp"/>



    <Button

        android:id="@+id/Btjogar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="@string/btn_jogar"
        android:textColor="@color/base_color"
        android:textStyle="bold"
        android:background="@drawable/button_customization"/>


    <Button

        android:id="@+id/Btsobre"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Sobre"
        android:textColor="@color/base_color"
        android:textStyle="bold"
        android:background="@drawable/button_customization"
        android:layout_below="@+id/Btjogar"/>




<include layout="@layout/botton_menu"/>


</RelativeLayout>
